<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

    
  
      <div class="box-name">
        <%= f.label "名前" %><%= f.label "(姓)" %><br><%= f.text_field:first_name, autofocus: true, autocomplete: "last_name" %><br>
        <%= f.label "(名)" %><br><%= f.text_field:family_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    
      <div class="box-name-kana">
        <%= f.label "フリガナ" %><%= f.label "(セイ)" %><br>
        <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %><br>
        <%= f.label "(メイ)" %><br>
        <%= f.text_field  :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
      </div>
    
    
      <div class="box-email">
        <%= f.label "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>
    
      <div class="box-postal-code">
        <%= f.label " 郵便番号（ハイフンなし）" %><br>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%>
      </div>
    
    
      <div class="box-address">
        <%= f.label "住所" %><br>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    
      <div class="box-phone-number">
        <%= f.label  "電話番号（ハイフンなし）" %><br>
        <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
      </div>
    
      <div class="box-password">
        <%= f.label "パスワード（6文字以上）" %><br>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="box-password-confirmation">
        <%= f.label "パスワード（確認用）" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="box-login">
        <%= f.submit "新規登録", class: "btn btn-secondary" %>
      </div>
    <% end %>
    　<div class="box-newusr">
        <p><span>------------</span> 既に登録されていますか？ <span>------------</span></p>
        <%= link_to "ログイン", new_customer_session_path %>
      </div>