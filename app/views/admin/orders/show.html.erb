<div class="container">
  <div class="row">
    <div class="col">
      <h5>注文履歴詳細</h5>

        <form>
          <div class="form-group">
            <div class="col">購入者</div>
            <div>
              <%#= link_to admin_customers_show(@order.customer) do %>
                <%#= @order.customer.family_name %><%#= @order.customer.first_name %>
              <%# end %>
            </div>
          </div>
          <div class="form-group">
             <div class="col">注文日</div>
             <div><%#= @order.created_at.to_s %></div>
          </div>
          <div class="form-group">
             <div class="col">配送先</div>
             <div><%#= @order.zip_code %><%#= @order.address %></div>
          </div>
          <div class="form-group">
             <div class="col">支払方法</div>
             <div><%#= @order.payment_method %></div>
          </div>
          <div class="form-group">
             <div class="col">注文ステータス</div>
             <div><%#= @order.shipping_status %></div>
          </div>
        </form>

      <div style="display: flex">
        <table class="table">
          <thead>
            <tr class="table-warning">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
              <th>制作ステータス</th>
            </tr>
          </thead>
          <tbody>
          <%# @order.order_items.each do |order_item| %>
              <tr>
                <td><%#= order_item.item.name %></td>
                <td><%#= order_item.subprice %></td>
                <td><%#= order_item.quantity %></td>
                <td><%#= order_item.subprice * order_item.quantity %></td>
                <td><%#= order_item. %></td>
              </tr>
          <%# end %>
          </tbody>
        </table>
          <div class="row">
            <div class="col">商品合計</div>
            <div><%#= array.sum %></div>
            <div class="col">送料</div>
            <div><%#= @order. %></div>
            <div class="col">請求金額合計</div>
            <div><%#= array.sum + @order. %></div>
          </div>
        </div>
      </div>




    </div>
  </div>
</div>