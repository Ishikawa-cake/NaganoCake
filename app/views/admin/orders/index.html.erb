<div class="container">
  <div class="row">

    <h4>注文履歴一覧</h4>
    <table class="table">
      <thead>
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="table-warning">
            <td>
              <%= link_to admin_orders_index_path(order) do %>
                <%= order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
            <td><%= order.order_items.all.sum %></td>
            <td><%= order.shipping_status %></td>
          </tr>
　　　　<% end %>
      </tbody>
    </table>
  </div>
</div>