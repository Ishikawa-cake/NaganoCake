<%= form_with(model: [ :admin, item], local:true) do |f| %>

  <table>
    <tr>
      <td class="py-3" style="width: 120px;"><%= f.label :image, "商品画像" %></td>
    </td><%= f.file_field :image, accept: "image/*" ,  class: "form-control-file" %>
    </tr>
    <tr>
      <td class="py-3"><%= f.label :name, "商品名" %></td>
      <td><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></td>
    </tr>
    <tr>
      <td class="py-3"><%= f.label :explanation, "商品説明" %></td>
      <td><%= f.text_area :explanation, placeholder: "商品説明", class: "form-control" %></td>
    </tr>
    <tr>
      <td class="py-3"><%= f.label :tax_out_price, "税抜価格" %></td>
      <td class="d-inline-flex"><%= f.text_field :tax_out_price, class: "form-control" %><span class="px-2 py-1">円</span></td>
    </tr>
   </table>
  <div class="form-group mx-auto" style="width: 100px;">
    <%= f.submit class: 'btn btn-success' %>
  </div>

<% end %>