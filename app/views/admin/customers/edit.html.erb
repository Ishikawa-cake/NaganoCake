<div class="container">
  <div class="row">
    <div class="col">
      <div class="form-group" style="display: flex">
        <h5 class="table-active"><strong><%= @customer.family_name %><%= @customer.first_name %></strong>さんの会員情報編集</h5>
      </div>
      <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
        <%= render "customer/shared/error_messages", resource: @customer %>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3">会員ID</div>
        <div class="col-sm-3"><%= @customer.id %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3">氏名</div>
        <div class="col-sm-3"><%= f.text_field :family_name %></div>
        <div class="col-sm-3"><%= f.text_field :first_name %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3">フリガナ</div>
        <div class="col-sm-3"><%= f.text_field :kana_family_name %></div>
        <div class="col-sm-3"><%= f.text_field :kana_first_name %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></div>
        <div class="col-sm-3"><%= f.text_field :postal_code %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3"><%= f.label :address, "住所" %></div>
        <div class="col-sm-7"><%= f.text_field :address, :size=>"58" %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3"><%= f.label :tel, "電話番号（ハイフンなし）" %></div>
        <div class="col-sm-3"><%= f.text_field :tel %></div>
      </div>
      <div class="form-group" style="display: flex">
        <div class="col-sm-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-sm-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      <!--<div class="form-group" style="display: flex">-->
      <!--  <div class="col-sm-3">会員ステータス</div>-->
      <!--</div>-->
      <div class="col-sm-4 offset-sm-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>

      <% end %>
    </div>
  </div>
</div>